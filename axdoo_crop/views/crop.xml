<odoo>
    <record id="crop_list_view" model="ir.ui.view">
        <field name="name">crop.list</field>
        <field name="model">crop</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="crop_form_view" model="ir.ui.view">
        <field name="name">crop.form</field>
        <field name="model">crop</field>
        <field name="arch" type="xml">
            <form string="crop">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="crop_action" model="ir.actions.act_window">
        <field name="name">Crop</field>
        <field name="res_model">crop</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="axdoo_menu"
        name="Axdoo"
        parent="base.menu_custom"
    />

    <menuitem
        name="Crop"
        id="crop"
        parent="axdoo_menu"
        action="crop_action"
        sequence="20"
    />
</odoo>
