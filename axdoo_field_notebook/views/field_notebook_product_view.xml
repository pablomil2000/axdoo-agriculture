<odoo>

    <record id="field_notebook_product_view_form" model="ir.ui.view">
        <field name="name">field.notebook.product.form</field>
        <field name="model">field.notebook.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_code"/>
                            <field name="manufacturer_internal_code"/>
                            <field name="registration_number"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_product_view_tree" model="ir.ui.view">
        <field name="name">field.notebook.product.view.tree</field>
        <field name="model">field.notebook.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_code"/>
                <field name="manufacturer_internal_code"/>
                <field name="registration_number"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_product_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">field.notebook.product</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Parcel">
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="field_notebook_product_action"
            model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.product</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="field_notebook_product_view_tree"/>
        <field name="search_view_id"
               ref="field_notebook_product_view_filter"/>
    </record>

</odoo>
