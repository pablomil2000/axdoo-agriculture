<odoo>

    <record id="field_notebook_product_view_form" model="ir.ui.view">
        <field name="name">field.notebook.product.form</field>
        <field name="model">field.notebook.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="registration_number"/>
                            <field name="holder"/>
                            <field name="state"/>
                            <field name="manufacturer"/>
                            <field name="product_code"/>
                            <field name="formulated"/>
                        </group>
                        <group>
                            <field name="inscription_date"/>
                            <field name="expiration_date"/>
                            <field name="renewal_date"/>
                            <field name="modification_date"/>
                            <field name="procedure_date"/>
                            <field name="authorization_date"/>
                            <field name="conditioning"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="storage_security"/>
                            <field name="handling_security"/>
                        </group>
                        <group>
                            <field name="spill_security"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="factory"/>
                            <field name="manufacturer_internal_code"/>
                            <field name="observations"/>
                            <field name="procedure"/>
                            <field name="procedure_state"/>
                            <field name="domestic"/>
                            <field name="directive_registration_number"/>
                            <field name="version"/>
                            <field name="formulated_id"/>
                        </group>
                        <group>
                            <field name="departure_version"/>
                            <field name="state_version"/>
                            <field name="state_id"/>
                            <field name="substance_id"/>
                            <field name="ambit_id"/>
                            <field name="crop_id"/>
                            <field name="plague_id"/>
                            <field name="function_id"/>
                            <field name="headline_id"/>
                            <field name="sale_deadline"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_product_view_tree" model="ir.ui.view">
        <field name="name">field.notebook.product.view.tree</field>
        <field name="model">field.notebook.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="registration_number"/>
                <field name="name"/>
                <field name="holder"/>
                <field name="product_code"/>
                <field name="formulated"/>
                <field name="manufacturer"/>
                <field name="state"/>
                <field name="observations"/>
                <field name="procedure" optional="hide" />
                <field name="procedure_state" optional="hide" />
                <field name="conditioning" optional="hide" />
                <field name="domestic" optional="hide" />
                <field name="storage_security" optional="hide" />
                <field name="handling_security" optional="hide" />
                <field name="spill_security" optional="hide" />
                <field name="directive_registration_number" optional="hide" />
                <field name="version" optional="hide" />
                <field name="departure_version" optional="hide" />
                <field name="state_version" optional="hide" />
                <field name="state_id" optional="hide" />
                <field name="substance_id" optional="hide" />
                <field name="ambit_id" optional="hide" />
                <field name="crop_id" optional="hide" />
                <field name="plague_id" optional="hide" />
                <field name="function_id" optional="hide" />
                <field name="headline_id" optional="hide" />
                <field name="formulated_id" optional="hide" />
                <field name="procedure_date" optional="hide" />
                <field name="expiration_date" optional="hide" />
                <field name="inscription_date" optional="hide" />
                <field name="renewal_date" optional="hide" />
                <field name="modification_date" optional="hide" />
                <field name="sale_deadline" optional="hide" />
                <field name="authorization_date" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_product_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">field.notebook.product</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Parcel">
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="field_notebook_product_action"
            model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.product</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="field_notebook_product_view_tree"/>
        <field name="search_view_id"
               ref="field_notebook_product_view_filter"/>
    </record>

</odoo>
