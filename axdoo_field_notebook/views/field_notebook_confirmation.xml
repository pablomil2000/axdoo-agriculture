<odoo>

    <record id="view_field_notebook_confirmation_tree" model="ir.ui.view">
        <field name="name">field.notebook.confirmation.tree</field>
        <field name="model">field.notebook.confirmation</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="text_name"/>
            </tree>
        </field>
    </record>

    <record id="field_notebook_confirmation_action"
            model="ir.actions.act_window">
        <field name="name">Confirmation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.confirmation</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="view_field_notebook_confirmation_tree"/>
    </record>

</odoo>
