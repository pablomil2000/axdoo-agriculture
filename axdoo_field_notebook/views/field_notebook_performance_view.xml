    <record id="axdoo_field_notebook.field_notebook_performance_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">field.notebook.performance</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search performance">
                <group expand="0" string="Group By">
<!--                    <filter string="Campaign" name="campaign_id" context="{'group_by': 'campaign_id'}"/>-->
<!--                    <filter string="Associated" name="associate_id" context="{'group_by': 'associate_id'}"/>-->
<!--                    <filter string="Exploitation" name="exploitation_id" context="{'group_by': 'exploitation_id'}"/>-->
                    <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                    <filter string="Limit date" name="date_limit" context="{'group_by': 'date_limit'}"/>
                    <filter string="Start date" name="date_start" context="{'group_by': 'date_start'}"/>
                    <filter string="End date" name="date_end" context="{'group_by': 'date_end'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="field_notebook_performance_action"
            model="ir.actions.act_window">
        <field name="name">Performance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.performance</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="view_id"
               ref="field_notebook_performance_view_tree"/>
        <field name="search_view_id"
               ref="field_notebook_performance_view_filter"/>
    </record>
