<odoo>

    <record id="field_notebook_irrigation_view_form" model="ir.ui.view">
        <field name="name">field.notebook.irrigation.form</field>
        <field name="model">field.notebook.irrigation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="campaign_id"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="associate_id_domain" invisible="1"/>
                            <field name="associate_id" domain="associate_id_domain"/>
                            <field name="ucth_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_expected"/>
                            <field name="date_start"/>
                        </group>
                        <group>
                            <field name="water_quality"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="irrigation_system_id"/>
                        </group>
                        <group>
                            <field name="duration" type="measure" widget="timesheet_uom" decoration-danger="duration &gt; 24"/>
                        </group>
                        <group colspan="12">
                            <field name="employee_ids" widget="many2many_tags" />
                        </group>
                        <group colspan="12">
                            <field name="equipment_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_irrigation_view_tree" model="ir.ui.view">
        <field name="name">field.notebook.irrigation.view.tree</field>
        <field name="model">field.notebook.irrigation</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="name" readonly="1" decoration-bf="1"/>
                <field name="ucth_id"/>
                <field name="date_expected"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
                <field name="duration" type="measure" widget="timesheet_uom" decoration-danger="duration &gt; 24"/>
            </tree>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_irrigation_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">field.notebook.irrigation</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Parcel">
                <group expand="0" string="Group By">
                    <filter string="UCTH" name="ucth_id" context="{'group_by': 'ucth_id'}"/>
                    <filter string="Exploitation" name="exploitation_id" context="{'group_by': 'exploitation_id'}"/>
                    <filter string="Water quality" name="water_quality" context="{'group_by': 'water_quality'}"/>
                    <filter string="Expected date" name="date_expected" context="{'group_by': 'date_expected'}"/>
                    <filter string="Start date" name="date_start" context="{'group_by': 'date_start'}"/>
                    <filter string="End date" name="date_end" context="{'group_by': 'date_end'}"/>
                    <filter string="Irrigation type" name="irrigation_system_id" context="{'group_by': 'irrigation_system_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="field_notebook_irrigation_action"
            model="ir.actions.act_window">
        <field name="name">Irrigation system</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.irrigation</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="view_id"
               ref="field_notebook_irrigation_view_tree"/>
        <field name="search_view_id"
               ref="field_notebook_irrigation_view_filter"/>
    </record>

</odoo>
