<odoo>

    <record id="field_notebook_crop_view_form" model="ir.ui.view">
        <field name="name">field.notebook.crop.form</field>
        <field name="model">field.notebook.crop</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="varieties" string="Varieties ">
                            <field name="variety_ids" widget="one2many" context="{'show_attribute': False}">
                                <tree editable="bottom">
                                    <field name="variety_id"/>
                                    <!--Voy por aqui-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_crop_view_tree" model="ir.ui.view">
        <field name="name">field.notebook.crop.view.tree</field>
        <field name="model">field.notebook.crop</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="axdoo_field_notebook.field_notebook_crop_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">field.notebook.crop</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Parcel">
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="field_notebook_crop_action"
            model="ir.actions.act_window">
        <field name="name">Crop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.crop</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="field_notebook_crop_view_tree"/>
        <field name="search_view_id"
               ref="field_notebook_crop_view_filter"/>
    </record>

</odoo>
