<odoo>

    <record id="view_field_notebook_town_tree" model="ir.ui.view">
        <field name="name">field.notebook.town.tree</field>
        <field name="model">field.notebook.town</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="code_autonomy"/>
                <field name="code_province"/>
                <field name="province_id"/>
                <field name="code"/>
                <field name="code_control"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="field_notebook_town_action"
            model="ir.actions.act_window">
        <field name="name">Towns</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">field.notebook.town</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="view_field_notebook_town_tree"/>
    </record>

</odoo>
