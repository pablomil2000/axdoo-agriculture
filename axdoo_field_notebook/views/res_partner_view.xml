<odoo>

    <record id="res_partner_associated_action" model="ir.actions.act_window">
        <field name="name">Associated</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_associate': True,'res_partner_search_mode': 'associate', 'default_is_company': True, 'default_associate': True}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new associated in your address book
          </p><p>
            Odoo helps you easily track all activities related to an associated.
          </p>
        </field>
    </record>

    <record id="view_partner_form_technical" model="ir.ui.view">
        <field name="name">Partner form with technical</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="associate"/>
            </field>
            <field name="category_id" position="after">
                <field name="nursery"/>
                <field name="plant_passport"
                       attrs="{'invisible': [('nursery','=', False)]}"
                />
            </field>
        </field>
    </record>

    <record id="view_res_partner_technical_filter" model="ir.ui.view">
        <field name="name">res.partner.technical.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="after">
                <separator/>
                <filter
                    string="Associate"
                    name="associate"
                    domain="[('associate','=',True)]"
                />
                <filter
                    string="Nursery"
                    name="nursery"
                    domain="[('nursery','=',True)]"
                />
            </filter>
        </field>
    </record>

    <record id="action_associate_contacts" model="ir.actions.act_window">
        <field name="name">Associated</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'search_default_associate': 1,'res_partner_search_mode': 'associate', 'default_is_company': True, 'default_associate': True}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new associated in your address book
          </p><p>
            Odoo helps you easily track all activities related to an associated.
          </p>
        </field>
    </record>

    <record id="action_nursery_contacts" model="ir.actions.act_window">
        <field name="name">Nursery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'search_default_nursery': 1,'res_partner_search_mode': 'nursery', 'default_is_company': True, 'default_nursery': True}</field>

        <field name="context">{'search_default_nursery': 1}</field>
    </record>

</odoo>
