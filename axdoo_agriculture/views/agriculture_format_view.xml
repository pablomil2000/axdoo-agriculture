<odoo>

    <record id="agriculture_format_view_form" model="ir.ui.view">
        <field name="name">agriculture.format.form</field>
        <field name="model">agriculture.format</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <label for="format" />
                            <div name="format">
                                <field name="format" class="oe_inline" /> Kg
                            </div>
                            <field name="units"/>
                            <field name="pieces"/>
                            <field name="quality_category"/>
                            <label for="container_field" />
                            <div name="container_field">
                                <field name="container_field" class="oe_inline" /> Gr
                            </div>
                            <label for="container_sale" />
                            <div name="container_sale">
                                <field name="container_sale" class="oe_inline" /> Gr
                            </div>
                        </group>
                        <group>
                            <field name="kg_cost"
                                   widget="monetary"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="bulk"/>
                            <field name="input_output"/>
                            <field name="pda_selection"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="axdoo_agriculture.agriculture_format_view_tree" model="ir.ui.view">
        <field name="name">agriculture.format.view.tree</field>
        <field name="model">agriculture.format</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="axdoo_agriculture.agriculture_format_view_filter" model="ir.ui.view">
        <field name="name">fha.subvention.view.filter</field>
        <field name="model">agriculture.format</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Campaign">
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="agriculture_format_action" model="ir.actions.act_window">
        <field name="name">Format</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.format</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="agriculture_format_view_tree"/>
        <field name="search_view_id"
               ref="agriculture_format_view_filter"/>
    </record>

</odoo>
