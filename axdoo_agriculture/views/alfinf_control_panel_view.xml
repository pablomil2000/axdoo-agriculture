<odoo>

    <record id="axdoo_agriculture.alfinf_control_panel_view_form" model="ir.ui.view">
        <field name="name">alfinf.control.panel.form</field>
        <field name="model">alfinf.control.panel</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="company"/>
                    <field name="family"/>
                    <field name="delivery_note"/>
                    <field name="invoice"/>
                    <field name="date_delivery_note"/>
                    <field name="date_invoice"/>
                    <field name="client"/>
                </group>
            </form>
        </field>
    </record>

    <record id="axdoo_agriculture.alfinf_control_panel_view_tree" model="ir.ui.view">
        <field name="name">alfinf.control.panel.tree</field>
        <field name="model">alfinf.control.panel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company"/>
                <field name="family"/>
                <field name="delivery_note"/>
                <field name="invoice"/>
                <field name="date_delivery_note"/>
                <field name="date_invoice"/>
                <field name="client"/>
            </tree>
        </field>
    </record>

    <record id="axdoo_agriculture.alfinf_control_panel_view_filter" model="ir.ui.view">
        <field name="name">alfinf.control.panel.filter</field>
        <field name="model">alfinf.control.panel</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Searching">
                <group expand="0" string="Group By">
                    <filter string="Company" name="company" context="{'group_by': 'company'}"/>
                    <filter string="Delivery note" name="delivery_note" context="{'group_by': 'delivery_note'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="alfinf_control_panel_action" model="ir.actions.act_window">
        <field name="name">Alfinf Control Panel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">alfinf.control.panel</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id"
               ref="alfinf_control_panel_view_tree"/>
        <field name="search_view_id"
               ref="alfinf_control_panel_view_filter"/>
    </record>

</odoo>
