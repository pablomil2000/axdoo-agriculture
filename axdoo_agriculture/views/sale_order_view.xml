<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_sale_order_format" model="ir.ui.view">
            <field name="name">sale.order.form.sale.format</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="after">
                    <field name="agriculture_format_id" options="{'no_create': True}"/>
                </xpath>
           </field>
        </record>
    </data>
</odoo>
