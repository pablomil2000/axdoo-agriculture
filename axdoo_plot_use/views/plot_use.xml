<odoo>
    <record id="plot_use_list_view" model="ir.ui.view">
        <field name="name">Plot_use.list</field>
        <field name="model">plot_use</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="plot_use_form_view" model="ir.ui.view">
        <field name="name">Plot_use.form</field>
        <field name="model">plot_use</field>
        <field name="arch" type="xml">
            <form string="plot_use">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="plot_use_action" model="ir.actions.act_window">
        <field name="name">Plot_use</field>
        <field name="res_model">plot_use</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="axdoo_menu"
        name="Axdoo"
        parent="base.menu_custom"
    />

    <menuitem
        name="Plot use"
        id="plot_use"
        parent="axdoo_menu"
        action="plot_use_action"
        sequence="20"
    />
</odoo>
